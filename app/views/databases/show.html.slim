div.database data-id=@database.id
  div.details
    p
      strong
        'Name:
      span.editable data-url="/databases/#{@database.id}" data-attribute='database[name]'
        = @database.name
      '
    p
      strong
        'Shareable Link:
        = link_to database_url(@database), database_url(@database), title: 'Share this URL to share access to your DB'

  div.tables
    ul.list
      li
        a#add-table = 'Add Table'
      - @database.tables.each do |table|
        li
          a data-id=table.id data-name=table.name
            = table.name

    div.table data-id=current_table.try(:id)
      == render 'tables/table_info', table: @table
      == render 'tables/table', table: @table
      == render 'tables/table_ops', table: @table

== render 'columns/form'
= link_to 'Edit this Database', edit_database_path(@database)
